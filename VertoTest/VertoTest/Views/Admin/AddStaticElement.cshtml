@model StaticContent

@{
    ViewData["Title"] = "Add Static Content";
}
<div class="MainContent">
    <h1>@ViewData["Title"]</h1>

    <form asp-action="AddStaticElement" method="post">
        @Html.AntiForgeryToken()

        <div class="form-group">
            <label asp-for="Title" class="control-label"></label>
            <input asp-for="Title" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Body" class="control-label"></label>
            <textarea asp-for="Body" class="form-control"></textarea>
        </div>

        <div class="form-group">
            <label asp-for="Order" class="control-label"></label>
            <input asp-for="Order" type="number" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="SliderItemID" class="control-label">Panel ID</label>
            <input asp-for="SliderItemID" type="number" class="form-control" />
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Add Static Content</button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}